% Amounts List
\ProvidesPackage{amounts}

% Spoons
\newcommand{\teaSpoon}[1]
{
	#1 tsp
}

\newcommand{\tableSpoon}[1]
{
	#1 tbsp
}


% Stock
\newcommand{\stock}[2]
{
	#1 x #2 ml
}

% Liquid
\newcommand{\sprinkle}[1]
{
	#1 sprinkle
}


% Mass
\newcommand{\grams}[1]
{
	#1 g
}

% Count
\newcommand{\amount}[1]
{
	x #1
}

% Can
\newcommand{\can}[2]
{
	#1 x #2 g can
}


% Body
\newcommand{\thumb}[1]
{
	#1 thumbs
}

\newcommand{\handful}[1]
{
	#1 handful
}


% Specific
\newcommand{\cloves}[1]
{
	#1 cloves
}

\newcommand{\sprig}[1]
{
	#1 sprig
}

% Temperature
\newcommand {\Temp}[1] {
	#1 $^{\circ}$C
}

