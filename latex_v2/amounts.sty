% Amounts List
\ProvidesPackage{amounts}

% Spoons
\newcommand{\teaSpoon}[1]
{
	#1 tsp
}

\newcommand{\tableSpoon}[1]
{
	#1 tbsp
}

% Liquid
\newcommand{\ml}[1]
{
	#1 ml
}

\newcommand{\sprinkle}[1][]
{
	#1 sprinkle
}

\newcommand{\shot}[1]
{
	#1 shot
}

% Stock
\newcommand{\stock}[2]
{
	#1 x \ml{#2}
}

% Mass
\newcommand{\grams}[1]
{
	#1 g
}

% Count
\newcommand{\amount}[1]
{
	x #1
}

% Can
\newcommand{\can}[2]
{
	#1 x #2 g can
}

\newcommand{\teaCup}[1]
{
	#1 x 250ml cup
}

% Body
\newcommand{\thumb}[1]
{
	#1 thumbs
}

\newcommand{\handful}[1]
{
	#1 handful
}

% Specific
\newcommand{\cloves}[1]
{
	#1 cloves
}

\newcommand{\sprig}[1]
{
	#1 sprig
}

\newcommand{\stick}[1]
{
	#1 stick
}

\newcommand{\slices}[1]
{
	#1 slices
}

\newcommand{\rashers}[1]
{
	#1 rashers
}

% Temperature
\newcommand {\Temp}[1] {
	#1 $^{\circ}$C
}

\endinput
