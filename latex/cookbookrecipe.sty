% RecipeName
\newcommand {\recipeName}[1] {
	\setlength{\headheight}{24pt}
	\raggedleft{\fontfamily{qhv}\selectfont \Large{\underline{#1}} }
	\newline
}
% Serves Count
\newcommand {\serveCount}[2] {
	\textbf{Serves:} #1 \hspace{1cm} \textbf{Taste: #2/10}
	\newline
}

% Description
\newcommand {\recipeDesciption}[1] {
	#1
	\newline
}

% IngredientTitle
\newcommand {\IngredientTitle}[0] {
	\raggedright{\underline{\large{Ingredients}}}
	\newline
}

% Ingredient
\newcommand {\Ingredient}[1] {
	\textbf{#1}
}

% IngredientAmount
\newcommand {\IngredientAmount}[2] {
	\item \Ingredient{#1} - #2
}

% IngredientPreparation
\newcommand {\IngredientPreparation}[2] {
	\Ingredient{#1} : #2
	\newline
}

% 
% PreparationTitle
\newcommand {\PreparationTitle}[1] {
	\textbf{\large{PREPARATION:} #1}
	\newline
}

% Preparation (1 - Action)
\newcommand {\PreparationStep}[1] {
	% Check if we are already enumerated
	%	IF YES - then end the enumeration
	%	Else do nothing
	\center{\emph{ -- #1 --}}
	\newline
	% Start enumeration
	%\begin{enumerate}
}

% 
% CookingStep
\newcommand {\CookingStep}[1] {
	\center{\textbf{** #1 **}}
	\newline
}

% CookingCondition ("Continue Unitl")
\newcommand {\CookingCondition}[1] {
	\textbf{CONTINUE UNTIL:} #1
	\newline
}
